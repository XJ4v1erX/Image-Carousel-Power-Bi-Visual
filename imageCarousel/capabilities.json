{
    "dataRoles": [
      {
        "displayName": "Image URL",
        "name": "imageUrl",
        "kind": "Grouping"
      },
      {
        "displayName": "Sequence",
        "name": "measure",
        "kind": "Measure"
      }
    ],
    "privileges": [
      {
        "name": "WebAccess",
        "essential": true,
        "parameters": ["*"]
      }
    ],
    "dataViewMappings": [
      {
        "conditions": [
          {
            "measure": { "max": 1 },
            "imageUrl": { "min": 1, "max": 1 }
          }
        ],
        "categorical": {
          "categories": {
            "select": [
              { "for": { "in": "imageUrl" } }
            ],
            "dataReductionAlgorithm": {
              "top": { "count": 30000 }
            }
          },
          "values": {
            "select": [
              { "bind": { "to": "measure" } }
            ]
          }
        }
      }
    ],
    "objects": {
        "behavior": {
          "displayName": "Comportamiento",
          "properties": {
            "autoSlide": {
              "displayName": "Auto slide",
              "type": { "bool": true }
            },
            "hoverToZoom": {
              "displayName": "Hover to zoom",
              "type": { "bool": true }
            },
            "randomize": {
              "displayName": "Sort random on load",
              "type": { "bool": true }
            },
            "imageCount": {
              "displayName": "Image count",
              "type": { "numeric": true }
            },
            "interval": {
              "displayName": "Interval",
              "type": { "numeric": true }
            },
            "spaceBetween": {
              "displayName": "Space between images",
              "type": { "numeric": true }
            }
          }
        }
    }
}

  